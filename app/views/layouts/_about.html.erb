    <section id="page-about-research" class="page-about">
      <div class="container">
          <div class="row">
              <div class="col-md-3 text-center">
                <div class="research hi-icon-effect-1">
                  <a href="#page-about-research" ><i class="hi-icon fa fa-flask"></i></a>
                </div>
                <header class="process-header">
                </header>
              </div>
              <div class="col-md-9 text-center">
                <header class="process-header">
