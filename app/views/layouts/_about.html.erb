    </section><!-- about ends -->

        <section id="page-about-design" class="page-about">
      <div class="container">
          <div class="row">
              <div class="col-md-3 text-center">
                <div class="design hi-icon-effect-1">
                  <a href="#page-about-design" ><i class="hi-icon fa fa-pencil-square-o"></i></a>
                </div>
                <header class="process-header">
                </header>
              </div>
              <div class="col-md-9 text-center">
                <header class="process-header">
                  <h3>Design</h3>
